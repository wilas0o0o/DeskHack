<table class="table table-borderless comments-index">
  <% post.post_comments.each do |post_comment| %>
    <tr>
      <td class="col-1">
        <%= link_to user_path(post_comment.user) do %>
          <% if post_comment.user.avatar? %>
            <%= image_tag post_comment.user.avatar.url, class: "rounded-circle border", size: "40x40"%>
          <% else %>
            <%= image_tag "no_image_avatar.png", class: "rounded-circle border", size: "40x40" %>
          <% end %>
        <% end %>
        </td>
      <td class="col-8 align-middle comment-body text-break"><%= simple_format(post_comment.comment) %></td>
      <% if post_comment.user == current_user %>
        <td class="col-3 align-middle"><%= link_to "", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true, class: "far fa-trash-alt text-danger" %></td>
      <% end %>
    </tr>
  <% end %>
</table>

