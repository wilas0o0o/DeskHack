<div class="post-container">
  <h1>投稿詳細</h1>
  <table class="table">
    <thead>
      <tr>
        <td>投稿者名</td>
        <td>状況</td>
        <td>本文</td>
        <td colspan="3"></td>
      </tr>
    </thead>
    <tbody>
      <tr id="post_<% @post.id %>">
        <td><%= @post.user.name %></td>
        <td><%= @post.situation %></td>
        <td><%= @post.text %></td>
        <td>
          <% @post.images.each do |image| %>
             <%= image_tag image.to_s, size: "240x150" %>
          <% end %>
        </td>
        <td class="favorite-btn"><%= render 'favorites/favorite_btn', post: @post %></td>
        <td class="bookmark-btn"><%= render 'bookmarks/bookmark_btn', post: @post %></td>
        <td><%= link_to "編集", edit_post_path(@post), class: "btn btn-success" %></td>
        <td><%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger" %></td>
      </tr>
    </tbody>
  </table>
</div>