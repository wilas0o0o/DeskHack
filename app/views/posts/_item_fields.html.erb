<div class="row w-100 nested-fields ml-1 p-2 my-2 border bg-light">
  <div class="col-5 form-group d-flex align-items-center justify-content-center">
    <div class="add-item-image-btn">
      <%= f.label :image, class: "item-label" do %>
        <%= image_tag "no_image_item.jpg", size: "180x120", class: "prev-item-image rounded border" %>
      <% end %>
      <%= f.file_field :image, class: "hidden-field item-hidden-field" %>
      <p class="text-muted text-center">画像クリックで変更</p>
    </div>
  </div>
  <div class="col-6">
    <div class="form-group">
      <%= f.label :name, "商品名" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :category_id, "カテゴリー" %></br>
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: "選択してください", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :manufacturer, "メーカー" %>
      <%= f.text_field :manufacturer, class: "form-control" %>
    </div>
  </div>
  <div class="actions col-1 d-flex justify-content-end align-items-end">
    <%= link_to_remove_association "#{ icon 'fas', 'trash-alt' }".html_safe, f, class: "item-delete-btn fa-2x text-danger" %>
  </div>
</div>
