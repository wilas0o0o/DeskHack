<div class="form-container d-flex justify-content-center align-items-center w-100">
  <div class="form-wrapper">
    <div class="form-signin w-100">
      <div class="form-logo form-logo-img d-flex justify-content-center mb-4 mx-auto">
        <%= image_tag("Logo_white.png") %>
      </div>
      <p class="alert text-danger"><%= alert %></p>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>

        <div class="form-group my-3">
          <%= f.text_field :login, autofocus: true, autocomplete: "login", placeholder: "ユーザーIDかメールアドレス", class: "form-control" %>
        </div>

        <div class="form-group my-3">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-control" %>
        </div>
        
        <%= link_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, method: :post %>
        <%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post %>

        <div class="form-action my-3">
          <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

        未登録の方は<%= link_to "こちら", new_user_registration_path %><br>
        ゲストログインは<%= link_to "こちら", guest_sign_in_path, method: :post %>
    </div>
  </div>
</div>