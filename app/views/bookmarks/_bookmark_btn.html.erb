<% if post.bookmarked_by(current_user) %>
  <%= link_to "保存済み", post_bookmarks_path(post), method: :delete, local: true, class: "fas fa-bookmark bookmarked-icon" %>
<% else %>
  <%= link_to "保存する", post_bookmarks_path(post), method: :post, local: true, class: "fas fa-bookmark bookmark-icon" %>
<% end %>